<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/rec_card">

    <ImageView
        android:id="@+id/crossImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:alpha="0.5"
        android:src="@drawable/ic_cross_circle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/assetNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingVertical="15dp"
        android:textColor="@color/bg_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Lenovo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <View
        android:id="@+id/hr_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="@+id/assetNameTextView"
        android:background="@color/bg_semidark"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/icon_sn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hr_line" />

        <TextView
            android:id="@+id/assetSnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/hr_line"
            app:layout_constraintLeft_toRightOf="@+id/icon_sn"
            android:text="SN "
            android:textColor="@color/text_semidark"/>

        <TextView
            android:id="@+id/assetSnTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/hr_line"
            app:layout_constraintLeft_toRightOf="@+id/assetSnTitle"
            tools:text="100145"
            android:textStyle="bold"
            android:textColor="@color/text_semidark"/>
    <ImageView
        android:id="@+id/icon_tag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_bookmark"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_sn"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/assetTagTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_sn"
        app:layout_constraintLeft_toRightOf="@+id/icon_tag"
        android:text="TAG "
        android:textColor="@color/text_semidark"/>


    <TextView
        android:id="@+id/assetTagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_sn"
        app:layout_constraintLeft_toRightOf="@+id/assetTagTitle"
        tools:text="100145"
        android:textStyle="bold"
        android:textColor="@color/text_semidark"/>


    <TextView
        android:id="@+id/updatedAtTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_tag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/text_semidark"
        tools:text="100145"
        android:textSize="12dp"/>

    <ImageView
        android:id="@+id/editImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:alpha="0.5"
        android:src="@drawable/ic_pen_to_square_solid"
        app:layout_constraintRight_toLeftOf="@id/crossImageView"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>